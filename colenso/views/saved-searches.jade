extends layout

block content
  div(class=row)
    div(class=col-xs-8 col-xs-offset-2)

  div(class="row")
    div(class="col-xs-8 col-xs-offset-2")
      table(class="table table-striped table-responsive")
        thead()
          tr()
            th() Name
            th() Description
        each search in searches
          tr()
            td()
              a(href="/results?q=//search_group[@name='#{search.name}']&type=advanced") #{search.name}
            td() #{search.description}
